<body>

    <header class="d-flex mt-3 mb-5 flex-wrap align-items-center justify-content-between py-3 mb-4 border-bottom navbar-custom">
        <div class="col-md-3 pb-3 mb-md-0">
            <a href="/" class="d-inline-flex link-body-emphasis text-decoration-none">
            <span class="fs-2 navbar-custom">Doggie Friends</span>
            </a>
        </div>

        <ul class="nav pb-3 col-12 col-md-auto mb-ms-2 justify-content-center navbar-custom">
            <li class="nav-item"><a href="/" class="nav-link px-2 fs-5 navbar-custom">Home</a></li>
            <li class="nav-item"><a href="/dogs" class="nav-link px-2 fs-5 navbar-custom">Find Friends</a></li>
            <li class="nav-item"><a href="#footer" class="nav-link px-2 fs-5 navbar-custom">Contact</a></li>
        </ul>

        <div class="pb-3 col-lg-4 col-md-3 text-end">
            {{#if name}} 
            <div class='d-flex justify-content-end'>
                <a href="/user/{{name}}"><button type="button" class="btn btn-custom me-2 mb-2">{{name}}</button></a>
                <form method="POST" action="/logout" id="login-form"><input type="submit" value='Logout' class="btn btn-custom mb-2 me-5"></form>
            </div>
            {{else}}
            <a href="/login"><button type="button" class="btn btn-custom me-2 mb-2">Login</button></a>
            <a href="/signup"><button type="button" class="btn btn-custom mb-2">Sign-up</button></a>
            {{/if}}
        </div>
    </header>


    {{{body}}}

